<%= form_with model: @task do |f| %>
  <p>Update any field and hit Update Task:</p>

  <%= f.label :action %>
  <%= f.text_field :action %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>

  <%= f.submit "Update Task", class: "new-task-button" %>
<% end %>
